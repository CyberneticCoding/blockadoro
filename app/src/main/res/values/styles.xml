<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="header_bar">
        <item name="android:background">@color/bg_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="titleTextColor">@color/white</item>
    </style>
    <style name="timer">
        <item name="android:background">@color/bg_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">72sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/orbitron</item>
    </style>
    <style name="pause_button">
        <item name="android:background">@color/white</item>
        <item name="android:drawableTop">@drawable/ic_pause</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="phase_view">
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/orbitron</item>
    </style>
</resources>